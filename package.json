	"scripts": {
		"build": "rm -rf build/* && yarn build:files && yarn build:css && yarn build:html && yarn build:js",
		"build:css": "node_modules/.bin/gulp css",
		"build:html": "node_modules/.bin/gulp html",
		"build:files": "node_modules/.bin/gulp files",
		"build:js": "node_modules/.bin/gulp js",
		"lint": "yarn lint:css && yarn lint:html && yarn lint:js",
		"lint:css": "node_modules/.bin/stylelint 'scss/**/*.scss'",
		"lint:html": "node_modules/.bin/linthtml 'src/**/*.html'",
		"lint:js": "node_modules/.bin/eslint js/* --ext .js",
		"watch": "gulp"
	},
	"dependencies": {},
	"devDependencies": {
		"@linthtml/linthtml": "^0.8.4",
